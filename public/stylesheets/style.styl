keyboard-button-font-color    = #545454
keyboard-button-color         = #F2F1F0
keyboard-button-color-pressed = #B9B9B7
keyboard-button-color-hover   = #CBC7C3
font-family                   = Helvetica, sans-serif

.control_panel 
  margin: 0 auto;
  width: 720px;
  height: 540px;
  position: relative;

  .placeholder 
    position: absolute;
    width: 100%;
    height: 100%;  
    background-color: black;

    p 
      color: white;
      font-size: 20px;
      margin-top: 150px;
      text-align: center;
    
  .video_stream 
    background-color: rgba(0,0,0,0.5);

    img 
      position absolute
      width: 100%;
      height: 100%;  
      z-index 10
    
  .button
    display block
    text-decoration none
    text-transform uppercase
    text-align center
    font-family font-family
    position absolute
    color:keyboard-button-font-color
    border 1px solid rgba(0,0,0,0.05)
    background-color keyboard-button-color
    opacity 0.5
    border-radius 2px

  .button:hover  
    background-color: keyboard-button-color-hover;
    
  .menu
    .button
      width 50px
      height 50px
      top 10px
      z-index 20
      font-size 30px;
      line-height 1.7
    .button.reload_stream
      right 10px
    .button.snapshot
      right 70px

  .keyboard 
    width: 252px;
    height: 167px;
    position: absolute;
    right: 10px;
    bottom: 10px;
    z-index: 200000;

    .button 
      width:  80px;
      height: 80px;
      font-size: 50px;
      line-height: 1.7;
    

    .button.w
      left 85px
      top 0

    .button.a
      left 0
      top 85px

    .button.s
      left 85px
      top 85px

    .button.d
      left 170px
      top 85px
      
    .button:after
      content attr(data-desktop-label)


    

    .button.pressed 
      background-color: keyboard-button-color-pressed;
    
@media (max-width: 720px)
  body
    margin 0

  html, body, .container, .main-content, .control_panel
    height 100%

  .control_panel
    position absolute
    top 0
    width 100%
    height 100%  
    z-index 10


    .menu
      .button
        position fixed

    .keyboard 
      position fixed
      width 100%
      right auto
      .button
        border-radius 100%;
        line-height 1.5
      .button.w
        left 20px
      .button.s
        left 20px
      .button.a
        left auto
        top 40px
        right 105px
      .button.d
        left auto
        right 20px
        top 40px
      
      .button:after
        content attr(data-mobile-label)

    .video_stream
      img
        height auto

  .presentation
    position absolute

  footer
    position absolute
    bottom 0


  



